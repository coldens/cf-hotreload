{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test",
    "vitest.config.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "coverage",
  ]
}